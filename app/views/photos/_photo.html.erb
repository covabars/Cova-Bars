<div style="float: left; padding: 5px;">
<%= link_to image_tag(photo.photo.url(:thumb)),
              photo_path(photo),
              "title" => photo.title, 
              :rel => "prettyPhoto[gallery]"
%><br /><%= photo.title %>
<% if is_logged_in? and logged_in_user and logged_in_user.has_role?('administrator') %>
<br />[<%= link_to 'Delete', photo_path(photo), :method => :delete, :confirm => 'Are you sure?' %>]
<% end %>
</div>

